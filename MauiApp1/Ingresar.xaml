<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Ingresar"
             Title="Ingresar">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Instituto Tecnologico de Tijuana"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="15"
                   HorizontalOptions="Center"/>

            <Label Text="Desarrollo de Aplicaciones Moviles"
                   TextColor="Black"
                   FontSize="15"
                   FontAttributes="None"
                   HorizontalOptions="Center"/>

            <Label Text="Horario: Lunes - Viernes 16-17"
                   TextColor="Black"
                   FontAttributes="Italic"
                   FontSize="15"/>

            <Label Text="Alumno: Carlos Abraham Lozoya Avalos"
                   TextColor="Black"
                   FontSize="15"
                   FontAttributes="Italic"
                   TextDecorations="Underline"/>

            <Image Source="img.png"
                   HeightRequest="300"
                   WidthRequest="300"
                   HorizontalOptions="Center"
                   Aspect="Fill"/>

            <Label Text="Alta de Alumnos"
                   TextColor="Black"
                   FontSize="15"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="No De Control:"
                   TextColor="Black"
                   FontSize="15"/>

            <Entry Placeholder="Clic Aqui"
                   x:Name="txtnocontrol"
                   Keyboard="Numeric"/>

            <Label Text="Nombre(s):"
                   TextColor="Black"
                   FontSize="15"/>

            <Entry Placeholder="Clic Aqui"
                   x:Name="txtnombres"
                   Keyboard="Text"/>

            <Label Text="Apellido(s):"
                   TextColor="Black"
                   FontSize="15"/>

            <Entry Placeholder="Clic Aqui"
                   x:Name="txtapellidos"
                   Keyboard="Text"/>

            <Label Text="Telefono (Celular):"
                   TextColor="Black"
                   FontSize="15"/>

            <Entry Placeholder="Clic Aqui"
                   x:Name="txttel"
                   Keyboard="Numeric"/>

            <Label Text="DirecciÃ³n:"
                   TextColor="Black"
                   FontSize="15"/>

            <Entry Placeholder="Clic Aqui"
                   x:Name="txtdireccion"
                   Keyboard="Text"/>

            <Label Text="CURP:"
                   TextColor="Black"
                   FontSize="15"/>

            <Entry Placeholder="Clic Aqui"
                   x:Name="txtcurp"
                   Keyboard="Text"/>

            <Label Text="NSS:"
                   TextColor="Black"
                   FontSize="15"/>

            <Entry Placeholder="Clic Aqui"
                   x:Name="txtnss"
                   Keyboard="Numeric"/>

            <Button Text="Ingresar"
                    x:Name="btningresar"
                    Clicked="IngresarAlumno"
                    TextColor="White"
                    BackgroundColor="SlateGray"/>

            <Button Text="Nuevo Alumno"
                    x:Name="btnnuevoalumno"
                    Clicked="Nuevoalumno"
                    TextColor="White"
                    BackgroundColor="SlateGray"/>

            <Button Text="Regresar a Principal"
                    x:Name="btnregresar"
                    Clicked="Regresar"
                    TextColor="White"
                    BackgroundColor="Black"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>